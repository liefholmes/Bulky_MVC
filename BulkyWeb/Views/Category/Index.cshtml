@model List<Category>

<div class="container">
	<div class="row pt-4" pb-3>
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle-fill"></i> Create New Category
			</a>
		</div>
	</div>

</div>
<table class="table table-bordered table-striped">
	<thread>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Category Order
			</th>
		</tr>
	</thread>
	<tbody>
		@foreach (var obj in Model.OrderBy(u=>u.DisplayOrder))
		{
			<tr>
				<td>@obj.Name</td>
				<td>
					@obj.DisplayOrder
				</td>
				<td>
					<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
						Delete
					</a>
				</td>
				<td>
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-danger">
						Edit
					</a>
				</td>
			</tr>			
		}
	</tbody>
	
</table>
